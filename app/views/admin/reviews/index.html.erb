<div class="pt-6 px-4">
  <h1 class="text-xl leading-8 font-semibold text-gray-900 dark:text-white mb-4">Отзывы</h1>

  <%= link_to 'Создать', new_admin_review_path, class: blue_btn_styles,
              data: { controller: 'modal-btn', action: 'click->modal-btn#open', turbo_prefetch: false } %>
</div>

<div id="orders" class="pt-6">
  <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="p-4">
          <div class="flex items-center">
            <input id="checkbox-all-search" type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
            <label for="checkbox-all-search" class="sr-only">checkbox</label>
          </div>
        </th>
        <th scope="col" class="px-6 py-3">
          <%= sort_link(@q_reviews, :id, 'ИД', data: { turbo_prefetch: false }) %>
        </th>
        <th scope="col" class="px-6 py-3">
          <%= sort_link(@q_reviews, :product_id, 'Товар', data: { turbo_prefetch: false }) %>
        </th>
        <th scope="col" class="px-6 py-3">
          <%= sort_link(@q_reviews, :user_id, 'Пользователь', data: { turbo_prefetch: false }) %>
        </th>
        <th scope="col" class="px-6 py-3">
          <%= sort_link(@q_reviews, :rating, 'Рейтинг', data: { turbo_prefetch: false }) %>
        </th>
        <th scope="col" class="px-6 py-3">
          Отзыв
        </th>
        <th scope="col" class="px-6 py-3">
          Фото
        </th>
        <th scope="col" class="px-6 py-3">
          <%= sort_link(@q_reviews, :approved, 'Опубликован', data: { turbo_prefetch: false }) %>
        </th>
        <th scope="col" class="px-6 py-3">
          <%= sort_link(@q_reviews, :created_at, 'Дата создания', data: { turbo_prefetch: false }) %>
        </th>
        <th scope="col" class="px-6 py-3">
          Действия
        </th>
      </tr>
      </thead>
      <tbody>
      <%= render @reviews %>
      </tbody>
    </table>
  </div>

  <%= render partial: '/layouts/partials/admin/pagy' %>
</div>
