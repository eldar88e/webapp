<%= form_with(model: @user, url: admin_user_path(@user), method: :patch) do |form| %>

  <div class="mb-5">
    <%= form.label :middle_name, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
    <%= form.text_field :middle_name, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
  </div>

  <div class="mb-5">
    <%= form.label :first_name, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
    <%= form.text_field :first_name, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
  </div>

  <div class="mb-5">
    <%= form.label :last_name, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
    <%= form.text_field :last_name, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
  </div>

  <div class="mb-5">
    <%= form.label :email, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
    <%= form.text_field :email, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
  </div>

  <div class="flex flex-wrap -mx-1.5">
    <div class="mb-5 w-full sm:w-1/2 px-1.5">
      <%= form.label :tg_id, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= form.number_field :tg_id, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    </div>

    <div class="mb-5 w-full sm:w-1/2 px-1.5">
      <%= form.label :username, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= form.text_field :username, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    </div>
  </div>

  <div class="mb-5">
    <%= form.label :address, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
    <%= form.text_field :address, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
  </div>

  <div class="mb-5">
    <%= form.label :street, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
    <%= form.text_field :street, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
  </div>

  <div class="flex flex-wrap -mx-1.5">
    <div class="mb-5 w-full sm:w-1/3 px-1.5">
      <%= form.label :home, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= form.text_field :home, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    </div>

    <div class="mb-5 w-full sm:w-1/3 px-1.5">
      <%= form.label :apartment, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= form.text_field :apartment, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    </div>

    <div class="mb-5 w-full sm:w-1/3 px-1.5">
      <%= form.label :build, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= form.text_field :build, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    </div>
  </div>

  <div class="flex flex-wrap -mx-1.5">
    <div class="mb-5 w-full sm:w-1/2 px-1.5">
      <%= form.label :phone_number, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= form.text_field :phone_number, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    </div>

    <div class="mb-5 w-full sm:w-1/2 px-1.5">
      <%= form.label :postal_code, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= form.number_field :postal_code, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    </div>
  </div>

  <% if current_user.admin? %>
    <div class="mb-5">
      <%= form.label :role, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= form.select :role, User.roles.keys.map { |key| [I18n.t("roles.#{key}"), key] }, {},
                      { class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } %>
    </div>
  <% end %>

  <div class="flex flex-wrap -mx-1.5">
    <div class="mb-5 w-1/2 px-1.5">
      <%= form.label :account_tier_id, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>

      <%= form.select :account_tier_id, [['Гость', nil]] + AccountTier.all.map { |i| [i.title, i.id] }, {},
                      { class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' } %>
    </div>

    <div class="mb-5 w-1/2 px-1.5">
      <%= form.label :bonus_balance, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
      <%= form.number_field :bonus_balance, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
    </div>
  </div>

  <div class="flex items-center">
    <%= form.submit "Сохранить", data: { action: "click->modal#close" },
                    class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
  </div>
<% end %>