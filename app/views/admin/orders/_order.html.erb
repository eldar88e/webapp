<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-700" id="<%= dom_id order %>">
  <td class="w-4 p-4">
    <div class="flex items-center">
      <input id="checkbox-table-search-1" type="checkbox" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
      <label for="checkbox-table-search-1" class="sr-only">checkbox</label>
    </div>
  </td>

  <td class="px-6 py-4"><%= order.id %></td>

  <td class="px-2 py-4">
    <span class="<%= order_status_class(order.status) %> text-xs font-medium px-2.5 py-0.5 rounded">
      <%= I18n.t("order.statuses.#{order.status}").gsub(' ', "\u00A0") %>
    </span>
  </td>

  <td class="px-6 py-4"><%= form_price order.total_amount %></td>

  <th scope="row" class="px-6 py-4 whitespace-nowrap">
    <%= render partial: 'admin/users/user_name', locals: { user: order.user } %>
  </th>

  <td class="px-6 py-4">
    <% if order.tracking_number.present? %>
      <%= link_to order.tracking_number, target: '_blank', class: 'flex items-center gap-1 text-blue-500 no-underline hover:underline' do %>
        <%= render Admin::IconComponent.new name: :link, width: 16 %>
        <%= order.tracking_number.sub('https://www.pochta.ru/tracking', '') %>
      <% end %>
    <% end %>
  </td>

  <td class="px-6 py-4"><%= format_date order.created_at %></td>

  <td class="px-6 py-4"><%= format_date order.paid_at %></td>

  <td class="px-6 py-4"><%= format_date order.shipped_at %></td>

  <td class="flex px-6 py-4">
    <%= link_to edit_admin_order_path(order), class: 'btn',
                data: { controller: 'modal-btn', action: 'click->modal-btn#open', turbo_prefetch: false } do %>
      <%= render Admin::IconComponent.new name: :edit %>
    <% end %>
  </td>
</tr>
