<% if @cart_items.present? %>
  <div id="<%= dom_id @cart %>">
    <%= render partial: '/cart_items/cart_item', collection: @cart_items %>

    <div><%= button_to "Очистить заказ", @cart, method: :delete %></div>
    <%= button_to "Оформить заказ", orders_path %>
  </div>
<% else %>
  <div><%= t('empty_cart') %></div>
<% end %>
