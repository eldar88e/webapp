<div class="cart" id="cart">
  <% if @cart_items.present? %>
    <div class="flex justify-between items-center">
      <div class="bold">Товаров: </div>
      <button class="flex gap-1 items-center">
        <span>Очистить корзину</span>
        <%= render IconComponent.new name: :trash, size: 16 %>
      </button>
    </div>

    <%= render '/carts/cart_items' %>

    <%= button_to "Оформить заказ", orders_path, params: { page: 1 }, class: 'btn btn-big',
                  data: { controller: 'buttons', action: 'click->buttons#leftAction' } %>
  <% else %>
    <div><%= t('empty_cart') %></div>
  <% end %>
</div>
