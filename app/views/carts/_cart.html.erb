<% if @cart_items.present? %>
  <%= render partial: '/cart_items/cart_item', collection: @cart_items %>

  <div><%= button_to "Очистить корзину", @cart, method: :delete, class: 'btn mb-3 mt-3' %></div>
  <%= button_to "Оформить заказ", orders_path, class: 'btn'  %>
<% else %>
  <div>Ваша корзина пуста!</div>
<% end %>
