<div id="<%= dom_id cart_item %>" class="flex mb-2" data-cart-target="itemQuantity">
  <div class="basis-1/4">
    <% if cart_item.product.image.attached? %>
      <%= image_tag storage_path(cart_item.product.image), alt: cart_item.product.name, width: 72, height: 72 %>
    <% else %>
      <%# TODO: если нет картинка %>
    <% end %>
  </div>
  <div class="basis-1/3">
    <%= link_to format_name(cart_item.product.name), product_path(cart_item.product), data: { turbo_prefetch: false } %>
  </div>
  <div class="quantity">
    <% if cart_item.product.name == 'Доставка' %>
      <span>Услуга</span>
    <% else %>
      <%= button_to '-', cart_item_path(id: cart_item.id), params: { down: true }, method: :patch, class: 'plus',
                    data: { controller: 'vibration', action: 'click->vibration#makeVibration' } %>
      <div class="num"><%= cart_item.quantity %></div>
      <%= button_to '+', cart_item_path(id: cart_item.id), params: { up: true }, method: :patch, class: 'plus',
                    data: { controller: 'vibration', action: 'click->vibration#makeVibration' } %>
    <% end %>
  </div>
   <div class="cart-item-price">
     <%= cart_item.product.price.to_i %>₽
   </div>
</div>
